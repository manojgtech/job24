<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Jobprofile">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:id="@+id/dp_image"
                        android:src="@drawable/user"
                        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/edit_dp"
        android:text="Edit Pic"/>

</LinearLayout>
                    <TextView
                        android:id="@+id/text_home"
                         android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="username"
                        android:textStyle="bold"
                        android:fontFamily="@string/title_activity_base"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="24dp" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/colorWhite"
                    android:textAlignment="center"
                    android:textDirection="firstStrongLtr"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/biography"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/biotxt"
                            android:textAllCaps="true"
                            android:text="bio"
                            />


                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/com_facebook_blue"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/calendar"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/dobtxt"
                            android:textSize="18dp"
                            android:text="dob"
                            />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/com_facebook_blue"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/phone"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:id="@+id/phonetxt"
                            android:text="phone"
                            />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/com_facebook_blue"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/email"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/emailtxt"
                            android:textSize="18dp"
                            android:text="email"
                            />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/com_facebook_blue"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/linkedin"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/linkdxt"
                            android:textSize="18dp"
                            android:text="linkedin"
                            />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/com_facebook_blue"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/address"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtaddrs"
                            android:textSize="18dp"
                            android:text="address"
                            />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/com_facebook_blue"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewmore"
                        android:text="View Job Profile"
                        />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
</LinearLayout>